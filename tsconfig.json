{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "target": "es2017",
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": false,
    "allowSyntheticDefaultImports": true,
    "declarationMap": false,
    "lib": ["esnext"],
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["types/*"]
    }
  },
  "include": ["src/**/*.ts", "types/**/*.d.ts", "src/demo.js", "src/demo.js"],
  "exclude": ["node_modules", "dist"]
}
