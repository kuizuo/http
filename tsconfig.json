{
  "compilerOptions": {
    "module": "NodeNext",
    "lib": ["es2015"],
    "target": "ES2015",
    "moduleResolution": "Node",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src/*.ts", "src/**/*.ts", "demo/*.ts", "demo/**/*.ts"],
  "exclude": ["node_modules"]
}
